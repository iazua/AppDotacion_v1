@model AppDotacion.Models.Dotacion

@{
    ViewData["Title"] = "Editar Dotación";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" id="dotacionForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="Fecha_IngresoInt" />
                <input type="hidden" asp-for="Fecha_BajaInt" />

                <div class="row">
                    <!-- Columna 1 -->
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Rut_DNI" class="form-label"></label>
                            <input asp-for="Rut_DNI" class="form-control" />
                            <span asp-validation-for="Rut_DNI" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Agente" class="form-label"></label>
                            <input asp-for="Agente" class="form-control" />
                            <span asp-validation-for="Agente" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pais_Call_Center" class="form-label"></label>
                            <select asp-for="Pais_Call_Center" class="form-select">
                                <option value="">-- Seleccione País --</option>
                                @foreach (var item in ViewBag.Paises as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Pais_Call_Center" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre_Call_Center" class="form-label"></label>
                            <input asp-for="Nombre_Call_Center" class="form-control" />
                            <span asp-validation-for="Nombre_Call_Center" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Area" class="form-label"></label>
                            <select asp-for="Area" class="form-select">
                                <option value="">-- Seleccione Área --</option>
                                @foreach (var item in ViewBag.Areas as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Columna 2 -->
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="AreaGestion" class="form-label"></label>
                            <select asp-for="AreaGestion" class="form-select">
                                <option value="">-- Seleccione Área Gestión --</option>
                                @foreach (var item in ViewBag.AreasGestion as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="AreaGestion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contrato" class="form-label"></label>
                            <select asp-for="Contrato" class="form-select">
                                <option value="">-- Seleccione Contrato --</option>
                                @foreach (var item in ViewBag.Contratos as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Contrato" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipos_de_agente" class="form-label"></label>
                            <select asp-for="Tipos_de_agente" class="form-select">
                                <option value="">-- Seleccione Tipo Agente --</option>
                                @foreach (var item in ViewBag.TiposAgente as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Tipos_de_agente" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Servicio" class="form-label"></label>
                            <select asp-for="Servicio" class="form-select">
                                <option value="">-- Seleccione Servicio --</option>
                                @foreach (var item in ViewBag.Servicios as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Servicio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuarios_RcWeb" class="form-label"></label>
                            <input asp-for="Usuarios_RcWeb" class="form-control" />
                            <span asp-validation-for="Usuarios_RcWeb" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Columna 3 -->
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Nombre_Jefatura" class="form-label"></label>
                            <select asp-for="Nombre_Jefatura" class="form-select">
                                <option value="">-- Seleccione Jefatura --</option>
                                @foreach (var item in ViewBag.Jefaturas as IEnumerable<string> ?? Enumerable.Empty<string>())
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Nombre_Jefatura" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rut_Ficticio" class="form-label"></label>
                            <input asp-for="Rut_Ficticio" class="form-control" />
                            <span asp-validation-for="Rut_Ficticio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rut_DNI2" class="form-label"></label>
                            <input asp-for="Rut_DNI2" class="form-control" />
                            <span asp-validation-for="Rut_DNI2" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DV" class="form-label"></label>
                            <input asp-for="DV" class="form-control" type="number" />
                            <span asp-validation-for="DV" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clasifica_Cargo" class="form-label"></label>
                            <input asp-for="Clasifica_Cargo" class="form-control" />
                            <span asp-validation-for="Clasifica_Cargo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="CARGO" class="form-label"></label>
                        <input asp-for="CARGO" class="form-control" />
                        <span asp-validation-for="CARGO" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Fecha_Ingreso" class="form-label"></label>
                        <input asp-for="Fecha_Ingreso" class="form-control" type="date"
                               value="@(Model.Fecha_Ingreso.HasValue ? Model.Fecha_Ingreso.Value.ToString("yyyy-MM-dd") : "")" />
                        <span asp-validation-for="Fecha_Ingreso" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Fecha_Baja" class="form-label"></label>
                        <input asp-for="Fecha_Baja" class="form-control" type="date"
                               value="@(Model.Fecha_Baja.HasValue ? Model.Fecha_Baja.Value.ToString("yyyy-MM-dd") : "")" />
                        <span asp-validation-for="Fecha_Baja" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="N_Personal" class="form-label"></label>
                        <input asp-for="N_Personal" class="form-control" type="number" />
                        <span asp-validation-for="N_Personal" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" type="email" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Configuración para hacer que todos los campos sean opcionales
            $("#dotacionForm").removeData("validator");
            $("#dotacionForm").removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse("#dotacionForm");

            // Seleccionar automáticamente las opciones en los dropdowns
            $('select').each(function() {
                var select = $(this);
                var currentValue = select.attr('value') || select.val();
                if (currentValue) {
                    select.find('option[value="' + currentValue + '"]').prop('selected', true);
                }
            });

            // Manejar el formato de fecha para mostrar en el formato local
            $("input[type='date']").each(function() {
                if (this.value) {
                    var date = new Date(this.value);
                    if (!isNaN(date.getTime())) {
                        this.valueAsDate = date;
                    }
                }
            });
        });
    </script>
}